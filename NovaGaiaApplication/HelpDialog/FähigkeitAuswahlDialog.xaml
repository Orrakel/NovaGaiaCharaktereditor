<Window x:Class="NovaGaiaCharaktereditor.FähigkeitAuswahlDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fähigkeit auswählen" Height="300" Width="400">
    <StackPanel Margin="10">
        <TextBlock Text="Wähle eine Fähigkeit aus:" FontWeight="Bold" Margin="0,0,0,10" />
        <ListBox x:Name="FähigkeitListBox" DisplayMemberPath="Name" Height="180" />
        <Button Content="Hinzufügen" HorizontalAlignment="Center" Width="100" Margin="0,10,0,0" Click="BtnHinzufügen_Click" />
    </StackPanel>
</Window>
